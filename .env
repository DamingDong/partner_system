# 合作伙伴管理系统环境配置

# 应用基础配置
VITE_APP_NAME=合作伙伴管理系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=现代化的合作伙伴关系管理平台

# API配置
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# 调试模式
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# 功能开关
VITE_ENABLE_MOCK=true
VITE_USE_MOCK_DATA=true

# 主题配置
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_TOGGLE=true

# 国际化
VITE_DEFAULT_LANGUAGE=zh-CN
VITE_ENABLE_I18N=true

# 上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 缓存配置
VITE_CACHE_DURATION=3600000

# 安全设置
VITE_ENABLE_CORS=true
VITE_ENABLE_CSRF=true

# 开发环境专用
VITE_MOCK_DELAY=500
VITE_MOCK_ERROR_RATE=0